<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cl_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/bg_color"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/tv_title0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="18.5dp"
            android:layout_marginStart="14.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/my_device"
            android:textColor="@android:color/black"
            android:textSize="22sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_title1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/welcome"
            app:layout_constraintStart_toStartOf="@id/tv_title0"
            app:layout_constraintTop_toBottomOf="@id/tv_title0"
            android:textColor="#999999"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_add_device"
            android:paddingStart="9dp"
            android:paddingEnd="9dp"
            android:layout_marginEnd="4dp"
            app:layout_constraintTop_toTopOf="@id/tv_title0"
            app:layout_constraintBottom_toBottomOf="@id/tv_title1"
            app:layout_constraintEnd_toEndOf="parent" />
        <TextView
            android:id="@+id/iv_add_two"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scaleType="centerInside"
            android:src="@mipmap/ic_add_device"
            android:paddingStart="9dp"
            android:paddingEnd="9dp"
            android:layout_marginEnd="50dp"
            app:layout_constraintTop_toTopOf="@id/tv_title0"
            app:layout_constraintBottom_toBottomOf="@id/tv_title1"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="固件更新"
            android:gravity="center"
            android:textColor="@android:color/black"
android:visibility="gone"
            />

        <View
            android:id="@+id/v_guide"
            android:layout_width="0dp"
            android:layout_height="0.01dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="68.5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <View
            android:id="@+id/v_title1"
            android:background="@android:color/white"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/v_guide" />

        <TextView
            android:id="@+id/tv_complete"
            android:layout_width="wrap_content"
            android:layout_marginEnd="24dp"
            android:layout_height="24dp"
            android:paddingStart="7dp"
            android:paddingEnd="7dp"
            android:gravity="center"
            android:text="@string/done"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/v_title1"
            android:background="@drawable/bg_complete"
            android:textSize="12sp"
            android:textColor="@android:color/white" />

        <TextView
            android:id="@+id/tv_all"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="@string/select_all"
            android:textColor="#333333"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@id/tv_complete"
            app:layout_constraintBottom_toBottomOf="@id/tv_complete" />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#333333"
            android:textSize="14sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/v_guide" />

        <com.flexispot.ble.gui.view.DisAllowTouchRecycleView
            android:id="@+id/rv_types"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/v_guide"
            android:layout_marginTop="18.5dp"
            android:layout_width="0dp"
            android:layout_height="30dp" />

        <ImageView
            android:id="@+id/iv_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="17dp"
            android:src="@mipmap/ic_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_devices"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/iv_logo"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="20dp"
            android:paddingStart="15dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/rv_types" />

        <ImageView
            android:id="@+id/iv_empty"
            android:layout_marginTop="18.5dp"
            android:layout_width="0dp"
            android:layout_height="230dp"
            android:scaleType="centerCrop"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:src="@mipmap/bg_empty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_title1" />

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="34.5dp"
            android:gravity="center"
            android:text="@string/add_intellegent_device"
            android:textSize="@dimen/title_size"
            android:textColor="@android:color/white"
            android:layout_marginTop="@dimen/padding"
            app:layout_constraintBottom_toBottomOf="@id/iv_empty"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:id="@+id/iv_empty0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_device_empty"
            android:layout_marginBottom="6.5dp"
            app:layout_constraintStart_toStartOf="@id/iv_empty"
            app:layout_constraintEnd_toEndOf="@id/iv_empty"
            app:layout_constraintBottom_toTopOf="@id/tv_empty" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/gp_empty"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="iv_empty,tv_empty,iv_empty0" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/gp_device"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="rv_types,rv_devices" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/gp_title0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tv_title0,tv_title1,iv_add" />

        <androidx.constraintlayout.widget.Group
            android:id="@+id/gp_title1"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tv_all,tv_amount,tv_complete,v_title1" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>