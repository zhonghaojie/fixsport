<?xml version="1.0" encoding="utf-8"?>
<layout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:fitsSystemWindows="true">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:navigationIcon="@mipmap/ic_back">

        <TextView
            android:id="@+id/tv_header_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/novice_guide"
            android:textColor="@color/black"
            android:textSize="17sp" />

    </androidx.appcompat.widget.Toolbar>

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/automatic_two"
        android:textColor="#ff999999"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:layout_below="@+id/toolbar"
        />
    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="186dp"
        android:layout_height="401dp"
        android:layout_below="@+id/text"
        android:layout_marginBottom="173dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">

    <ImageView
        android:layout_width="186dp"
        android:layout_height="401dp"
        android:background="@mipmap/pic_three"

        />
        <ImageView
            android:id="@+id/kuang_one"
            android:layout_width="109dp"
            android:layout_height="90dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="73dp"
            android:background="@mipmap/ico_square"
            />
        <ImageView
            android:id="@+id/step"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="88dp"
            android:visibility="gone"
            />

        <ImageView
            android:id="@+id/kuang_two"
            android:layout_width="109dp"
            android:layout_height="160dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="40dp"
            android:background="@mipmap/ico_square"
            android:visibility="gone"
            />
        <ImageView
            android:id="@+id/step_two"
            android:layout_width="45dp"
            android:layout_height="60dp"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="90dp"
            android:visibility="gone"
            />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="100dp"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        >
        <TextView
            android:id="@+id/zidong_one"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/get_into"
            android:textColor="#ff333333"
            android:textSize="17sp"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/zidong_two"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text=""
            android:textColor="#ff333333"
            android:textSize="17sp"
            android:gravity="center"
            android:visibility="gone"
            />

    </LinearLayout>




    <Button
        android:id="@+id/btn_next"
        android:layout_width="260dp"
        android:layout_height="46dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:textColor="#36A0EE"
        android:text="@string/next"
        android:textSize="17sp"
        android:layout_marginBottom="33dp"
        android:background="@drawable/bg_tread"
        />
    <LinearLayout
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="33dp"
        android:layout_marginLeft="17.5dp"
        android:layout_marginRight="17.5dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:visibility="gone">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginRight="7.5dp">
            <com.flexispot.ble.gui.threadMill.WaveView
                android:id="@+id/wave_one"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:layout_width="21dp"
                android:layout_height="25dp"
                android:background="@mipmap/ico_arrow"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginRight="7.5dp">
            <com.flexispot.ble.gui.threadMill.WaveView
                android:id="@+id/wave_two"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:layout_width="21dp"
                android:layout_height="25dp"
                android:background="@mipmap/ico_arrow_lower"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginRight="7.5dp">
            <com.flexispot.ble.gui.threadMill.WaveView
                android:id="@+id/wave_three"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:layout_width="21dp"
                android:layout_height="25dp"
                android:background="@mipmap/ico_arrow"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginRight="7.5dp">
            <com.flexispot.ble.gui.threadMill.WaveView
                android:id="@+id/wave_four"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:layout_width="21dp"
                android:layout_height="25dp"
                android:background="@mipmap/ico_arrow_lower"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

            </ImageView>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginRight="7.5dp">
            <com.flexispot.ble.gui.threadMill.WaveView
                android:id="@+id/wave_five"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:layout_width="21dp"
                android:layout_height="25dp"
                android:background="@mipmap/ico_arrow"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

            </ImageView>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginRight="7.5dp">
            <com.flexispot.ble.gui.threadMill.WaveView
                android:id="@+id/wave_six"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                />
            <ImageView
                android:layout_width="21dp"
                android:layout_height="25dp"
                android:background="@mipmap/ico_arrow_lower"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true">

            </ImageView>
        </RelativeLayout>

    </LinearLayout>


</RelativeLayout>
</layout>