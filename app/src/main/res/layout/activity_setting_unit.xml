<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout

        android:id="@+id/rl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="#F9F9F9"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:navigationIcon="@mipmap/ic_back">

                <TextView
                    android:id="@+id/tv_walker_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/set_up"
                    android:textColor="#000"
                    android:textSize="17sp" />

            </androidx.appcompat.widget.Toolbar>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical">


                <RelativeLayout
                    android:id="@+id/rel_metric"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:background="@drawable/btn_right_item_selector"
                    android:clickable="true"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/metric_system"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />


                    <ImageView
                        android:id="@+id/metric"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/icon_weixuanzhong" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rel_british"
                    android:layout_width="match_parent"
                    android:layout_height="68dp"
                    android:background="@drawable/btn_right_item_selector"
                    android:clickable="true"
                    android:padding="10dp">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:text="@string/british_system"
                        android:textColor="#ff333333"
                        android:textSize="15sp" />


                    <ImageView
                        android:id="@+id/british"
                        android:layout_width="27dp"
                        android:layout_height="27dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:background="@mipmap/icon_weixuanzhong" />

                </RelativeLayout>


            </LinearLayout>
        </LinearLayout>
    </RelativeLayout>
</layout>