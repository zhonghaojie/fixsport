<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_device"
        android:fitsSystemWindows="true">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="@string/device_detail"
            android:textColor="#fff"
            android:textSize="18sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center" />

        <ImageView
            android:id="@+id/iv_back"
            android:src="@drawable/ic_arrow_back_white_24dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:scaleType="centerInside" />


        <TextView
            android:id="@+id/tv_restore"
            android:layout_width="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:text="@string/restore"
            android:layout_height="50dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <ImageView
            android:id="@+id/iv_loading"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="20dp"
            app:layout_constraintTop_toTopOf="@id/tv_title"
            app:layout_constraintBottom_toBottomOf="@id/tv_title"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@mipmap/ic_loading" />

        <TextView
            android:id="@+id/tv_height"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="113dp"
            android:textSize="60sp"
            android:textColor="@android:color/white"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintEnd_toStartOf="@id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_marginStart="5dp"
            android:textColor="@android:color/white"
            android:text="mm"
            app:layout_constraintStart_toEndOf="@id/tv_height"
            app:layout_constraintBottom_toBottomOf="@id/tv_height"
            app:layout_constraintTop_toTopOf="@id/tv_height"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_height_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="31dp"
            android:drawablePadding="6dp"
            android:drawableStart="@mipmap/ic_height"
            app:layout_constraintTop_toBottomOf="@id/tv_unit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:text="@string/media_height" />

        <TextView
            android:id="@+id/tv_error"
            app:layout_constraintTop_toBottomOf="@id/tv_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="40.5dp"
            android:text="@string/device_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="32sp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/tv_to_lowest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="@string/to_lowest"
            app:layout_constraintTop_toBottomOf="@id/tv_error"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@android:color/white"
            android:layout_marginLeft="50dp"
            android:layout_marginRight="50dp"
            android:gravity="center"
            android:textSize="18sp"/>

        <ImageView
            android:id="@+id/iv_error"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/ic_error"
            android:layout_marginTop="10.5dp"
            app:layout_constraintTop_toBottomOf="@id/tv_to_lowest"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:src="@mipmap/bg_up_or_down"
            app:layout_constraintTop_toBottomOf="@id/tv_height_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <com.flexispot.ble.gui.view.MoreLongRackHandleImageView
            android:id="@+id/vt_up"
            android:tag="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:focusable="true"
            android:clickable="true"
            android:src="@drawable/bg_button_up"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_height_label" />

        <com.flexispot.ble.gui.view.MoreLongRackHandleImageView
            android:id="@+id/vt_down"
            android:tag="2"
            android:focusable="true"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bg_button_down"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vt_up" />

        <TextView
            android:id="@+id/tv_stand"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/vt_down"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/tv_sit"
            android:drawableTop="@drawable/bg_button_height1"
            android:drawablePadding="5dp"
            android:layout_marginTop="28dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:text="@string/height1"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_sit"
            app:layout_constraintTop_toBottomOf="@id/vt_down"
            app:layout_constraintStart_toEndOf="@id/tv_stand"
            android:layout_marginTop="28dp"
            android:gravity="center"
            app:layout_constraintEnd_toStartOf="@id/tv_tack_back"
            android:drawableTop="@drawable/bg_button_height2"
            android:drawablePadding="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:text="@string/height2"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_tack_back"
            app:layout_constraintTop_toBottomOf="@id/vt_down"
            app:layout_constraintStart_toEndOf="@id/tv_sit"
            android:layout_marginTop="28dp"
            android:gravity="center"
            android:drawableTop="@drawable/bg_buton_takeback"
            android:drawablePadding="5dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="@android:color/white"
            android:text="@string/take_back"
            android:visibility="gone"/>

        <androidx.constraintlayout.widget.Group
            android:id="@+id/gp_normal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:constraint_referenced_ids="tv_height,tv_height_label,tv_unit"/>

       <androidx.constraintlayout.widget.Group
           android:id="@+id/gp_reset"
   android:visibility="gone"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           app:constraint_referenced_ids="tv_error,tv_to_lowest,iv_error"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>