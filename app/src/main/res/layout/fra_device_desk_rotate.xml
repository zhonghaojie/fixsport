<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:orientation="vertical"
        android:background="@drawable/bg_device"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true">

        <include
            layout="@layout/topbar_w"
            android:layout_width="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/v_split"
            android:layout_width="@dimen/split"
            android:layout_height="@dimen/split"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_height"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_unit"
            app:layout_constraintTop_toBottomOf="@id/rl_top"
            android:layout_marginTop="112dp" />

        <TextView
            android:id="@+id/tv_unit"
            android:text="mm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_height"
            app:layout_constraintBottom_toBottomOf="@id/tv_height" />

        <TextView
            android:id="@+id/tv_angle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/rl_top"
            app:layout_constraintEnd_toStartOf="@id/tv_angle_unit"
            app:layout_constraintHorizontal_chainStyle="packed"
            android:layout_marginTop="112dp"
            app:layout_constraintStart_toEndOf="@id/v_split"
            android:textSize="60sp"
            android:textColor="@android:color/white"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_angle_unit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="o"
            android:textSize="20sp"
            android:textColor="@android:color/white"
            android:layout_marginStart="9dp"
            app:layout_constraintTop_toTopOf="@id/tv_angle"
            app:layout_constraintStart_toEndOf="@id/tv_angle"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/tv_height_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="@string/rotate_height"
            android:textSize="16sp"
            android:layout_marginTop="34dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_height" />

        <TextView
            android:id="@+id/tv_angle_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="@string/rotate_angle"
            android:textSize="16sp"
            android:layout_marginTop="34dp"
            app:layout_constraintStart_toEndOf="@id/v_split"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_height" />

        <TextView
            android:id="@+id/tv_height_label0"
            android:layout_width="wrap_content"
            android:layout_marginTop="83dp"
            android:text="@string/height"
            app:layout_constraintTop_toBottomOf="@id/tv_height_label"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white" />

        <com.flexispot.ble.gui.view.MoreLongHandleImageView
            android:id="@+id/tv_down"
            android:layout_width="130dp"
            android:tag="0"
            android:layout_height="46dp"
            android:clickable="true"
            android:background="@drawable/bg_adjust"
            android:src="@mipmap/ic_down"
            android:scaleType="centerInside"
            android:gravity="center"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_up"
            app:layout_constraintTop_toBottomOf="@id/tv_height_label0"
            android:layout_marginTop="30dp" />

        <com.flexispot.ble.gui.view.MoreLongHandleImageView
            android:id="@+id/tv_up"
            android:layout_width="130dp"
            android:layout_height="46dp"
            android:clickable="true"
            android:tag="1"
            android:background="@drawable/bg_adjust"
            android:src="@mipmap/ic_up"
            android:scaleType="centerInside"
            android:layout_marginStart="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_down"
            app:layout_constraintBottom_toBottomOf="@id/tv_down" />

        <TextView
            android:id="@+id/tv_height_label1"
            android:layout_width="wrap_content"
            android:layout_marginTop="83dp"
            android:text="@string/angle"
            app:layout_constraintTop_toBottomOf="@id/tv_down"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textColor="@android:color/white" />

        <com.flexispot.ble.gui.view.MoreLongHandleImageView
            android:id="@+id/tv_reduce"
            android:layout_width="130dp"
            android:tag="2"
            android:layout_height="46dp"
            android:clickable="true"
            android:background="@drawable/bg_adjust"
            android:src="@mipmap/ic_reduce"
            android:scaleType="centerInside"
            android:gravity="center"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tv_add"
            app:layout_constraintTop_toBottomOf="@id/tv_height_label1"
            android:layout_marginTop="30dp" />

        <com.flexispot.ble.gui.view.MoreLongHandleImageView
            android:id="@+id/tv_add"
            android:layout_width="130dp"
            android:layout_height="46dp"
            android:clickable="true"
            android:tag="3"
            android:background="@drawable/bg_adjust"
            android:src="@mipmap/ic_add"
            android:scaleType="centerInside"
            android:layout_marginStart="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_reduce"
            app:layout_constraintBottom_toBottomOf="@id/tv_reduce" />

        <androidx.constraintlayout.widget.Group
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:constraint_referenced_ids="tv_angle,tv_angle_label,tv_angle_unit" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>